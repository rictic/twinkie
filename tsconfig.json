{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "inlineSourceMap": true,
    "noEmitOnError": false,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "lib": ["es2017"],
    "outDir": "lib"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
